<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/custom_item_vertical_margin"
    android:paddingLeft="@dimen/custom_item_horizontal_margin"
    android:paddingRight="@dimen/custom_item_horizontal_margin"
    android:paddingTop="@dimen/custom_item_vertical_margin"
    android:orientation="vertical">

    <TextView
        android:id="@+id/custom_name"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/custom_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>